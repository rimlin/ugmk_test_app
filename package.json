{
	"name": "vite-project",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start": "vite --port 3000",
		"api": "json-server --watch ./data/products.json --port 3001",
		"dockerize": "docker build -t ugmk_test_app .",
		"start-container": " docker run --name ugmk_test_app --rm -p 3000:80 ugmk_test_app",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint . --ext .ts,.tsx",
		"stylelint": "stylelint '**/*.scss'",
		"prettier-check": "prettier --check .",
		"all-checks": "yarn lint && yarn prettier-check",
		"prettier": "prettier --write .",
		"test": "vitest",
		"test:ci": "vitest run"
	},
	"dependencies": {
		"@hookform/resolvers": "^2.9.10",
		"@reduxjs/toolkit": "^1.9.1",
		"classnames": "^2.3.2",
